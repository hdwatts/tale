
<div id="tales" class="index">
  <div id="open-tales" class="reveal">
    <div class="menu-header">
      <h2><span class="reveal-state">+</span> Open Tales </h2>
      <span class="count"><%= Tale.open_tales.count %> entries</span>
    </div>
    <div class="items">
<% Tale.open_tales.each do |tale| %>
  <%= render 'tales/tale_teaser', tale: tale %>
<% end %>
      </div>
    </div>

 <div id="closed-tales" class="reveal">
      <div class="menu-header">
        <h2><span class="reveal-state">+</span> Closed Tales </h2><span class="count"><%= Tale.closed_tales.count %> entries</span>
      </div>
      <div class="items">
<% Tale.closed_tales.each do |tale| %>
  <%= render 'tales/tale_teaser', tale: tale %>
<% end %>
      </div>
    </div>


<%= button_to "Feeling spontaneous?", @random_tale, class: "btn", method: "get" %>

  </div>
  <div id="tag-nav">
  <ul>
    <% Tag.all.each do |tag| %>
      <li>
      <small><%= link_to "##{tag.name} (#{tag.tales.count})", tag_path(tag.name) %></small>
      </li>
    <% end %>
    </ul> 
  </div>