<h1>Start a new Tale</h1>

<%= form_for @tale do |f| %>
  
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
    <%= f.label :prompt %>
    <%= f.text_area :prompt, :cols => 34, :rows => 5, :onkeyup => "checkMaxlength(this);", :maxlength => 250 %>
  </fieldset>

  <fieldset>
    <%= f.fields_for :lines do |ff| %>
      <%= ff.label "The first line" %>
      <%= ff.text_area :content, :cols => 34, :rows => 5, :onkeyup => "checkMaxlength(this);", :maxlength => 250  %>
    <% end %>
  </fieldset>

  <fieldset>
    <%= f.fields_for @tags do |ff| %>
     <%= ff.label :tags %>
     <%= ff.text_field :name %>
    <% end %>
  </fieldset>

  <div>
    <%= f.submit "Create Tale", class: "btn btn-large" %>
  </div>

<% end %> 

